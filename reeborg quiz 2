#making functions to make my life easier
def turn_right():
    repeat 3:
        turn_left()

def jump_hurdle():
    while front_is_clear():
        if not at_goal():

            move()
        
    if not front_is_clear():
        turn_left()
    while wall_on_right():
        move()
    repeat 2:
        turn_right()
        move()
    while front_is_clear():
        move()
    if wall_in_front():
        turn_left()
        
#running my code
while not at_goal():
    jump_hurdle()
