#choose the shape you want the surface area for
import math

shape = input("choose which shape do you want. 1 for cube, 2 for square, 3 for circle")

#making statements for calculations
if shape == "1":
    sideLength = int(input("What is your side length?"))
    sa_cube = (sideLength*sideLength*6)
    print (sa_cube)
    
if shape == "3":
    radius = int(input("What is your radius?"))
    sa_circle = (radius*math.pi)
    print (sa_circle)
